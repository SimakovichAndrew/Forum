

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Форум пенсионеров@*@ViewBag.Title*@</title>
    <!--<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />-->
    <!--   11   -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Script/bootstrap")
</head>
<body>
    <div class="text-black-50">
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Форум пенсионеров</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                @* custom-toggler*@
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="collapsingNavbar" class="navbar-collapse collapse">
            <div>@Html.ActionLink("Главная", "Index", "Home")</div>
                <ul class="d-flex">
                    <li class="nav-item active" >@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li class="nav-item-custom ">@Html.ActionLink("Условия", "About", "Home")</li>
                    <li class="nav-item ">@Html.ActionLink("Контакт", "Contact", "Home")</li>
                    <li class="nav-item ml-auto">
                        <ul class="navbar-right text-white">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li>@Html.ActionLink("Войти", "Login", "Account")</li>
                                <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
                            }
                            else
                            {
                                <li style="color:lightgray;">
                                    <a>@Html.ViewBag.Greeting  @User.Identity.Name</a>
                                </li>
                                <li>@Html.ActionLink("Выход", "Logout", "Account")</li>
                            }
                        </ul>
                    </li>
                </ul>
            </div><!-- /.container-fluid -->
        </nav><!-- /.navbar-collapse -->

        <div class="clearfix"></div>
    </div>

                                <div class="container bg-primary text-light" >

                                    <div id="header_bottom">


                                        <div class="headcol first text-light">

                                            <h2>Добро пожаловать на Форум</h2>
                                            <div class="textwidget">
                                                <h4>Поделитесь своим мнением и выпейте кружечку любимого кофе !</h4>
                                            </div>

                                            <form role="search" method="get" id="bbp-search-form" action="http://dannci.wpmasters.org/wp-forum/forums/search/">
                                                <div>
                                                    <label class="screen-reader-text hidden" for="bbp_search">Search for:</label>
                                                    <input type="hidden" name="action" value="bbp-search-request">
                                                    <input tabindex="101" type="text" value="" name="bbp_search" id="bbp_search">
                                                    <input tabindex="102" class="button" type="submit" id="bbp_search_submit" value="Search">
                                                </div>
                                            </form>

                                        </div>

                                        <div class="headcol last bg-success">
                                            <dl role="main">
                                                <dt>Registered Users</dt>
                                                <dd>
                                                    <strong>61</strong>
                                                </dd>
                                                <dt>Forums</dt>
                                                <dd>
                                                    <strong>5</strong>
                                                </dd>
                                                <dt>Topics</dt>
                                                <dd>
                                                    <strong>23</strong>
                                                </dd>
                                                <dt>Replies</dt>
                                                <dd>
                                                    <strong>59</strong>
                                                </dd>
                                                <dt>Topic Tags</dt>
                                                <dd>
                                                    <strong>22</strong>
                                                </dd>
                                            </dl>
                                        </div>


                                    </div>

                                </div>
                                @*<div class="container body-content">*@
                                <div id="categories">
                                    @{ Html.RenderAction("Menu", "Nav"); }
                                </div>
                                <div id="content">
                                    @RenderBody()
                                    <hr />
                                    <footer>
                                        <p>&copy; @DateTime.Now.Year - Simakovich ASP.NET Application</p>
                                    </footer>
                                </div>


                            @Scripts.Render("~/bundles/jquery")
                            @Scripts.Render("~/bundles/bootstrap")
                            @RenderSection("scripts", required: false)
</body>
</html>


